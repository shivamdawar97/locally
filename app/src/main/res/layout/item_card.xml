<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp"
    android:background="@drawable/item_border"
    android:paddingBottom="20dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            tools:src="@drawable/inside_store2"
            android:scaleType="fitXY"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            app:srcCompat="@drawable/ic_favorite_empty"
            android:padding="5dp"
            android:background="#66FFFFFF"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        tools:text="Louis Phillippe"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        />

   <TextView
        android:id="@+id/item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="Men Slim Fit Formal"
        android:padding="3dp"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="Rs. 760"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="2dp"
            />


        <TextView
            android:id="@+id/item_price_cutThrough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="Rs. 890"
            android:background="@drawable/strike_through"
            android:textColor="@android:color/black"
            android:padding="2dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/item_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="(30% off)"
            android:textColor="@android:color/black"
            android:padding="2dp"
            android:visibility="gone"
            />




    </LinearLayout>



</LinearLayout>